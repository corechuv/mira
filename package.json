{
  "name": "mira-shop",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier -w .",
    "test": "vitest --ui",
    "test:run": "vitest run",
    "sitemap": "node scripts/gen-sitemap.mjs",
    "dev:full": "concurrently \"npm:server:dev\" \"vite\"",
    "build:server": "tsc -p server/tsconfig.json",
    "start": "node server/dist/index.js",
    "typecheck": "tsc -b",
    "prepare": "husky install",
    "dev:nf": "netlify dev",
    "deploy:nf": "netlify deploy --build --prod",
    "build:ci": "npm run typecheck && vite build",
    "dev:vite": "vite",
    "dev:nl": "netlify dev -c \"vite --port 5173\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@supabase/supabase-js": "^2.55.0",
    "compression": "^1.8.1",
    "cors": "2.8.5",
    "express": "4.19.2",
    "express-rate-limit": "^8.0.1",
    "framer-motion": "^12.23.12",
    "helmet": "^8.1.0",
    "lucide-react": "^0.462.0",
    "nodemailer": "^7.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^6.26.2",
    "sonner": "^2.0.7",
    "stripe": "18.4.0",
    "zod": "^4.0.17",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@netlify/functions": "^4.2.1",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.2.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "@vite-pwa/assets-generator": "^0.2.6",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^2.0.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.0",
    "lint-staged": "^16.1.5",
    "netlify-cli": "^23.1.3",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.20.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^0.20.0",
    "vitest": "^2.0.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}